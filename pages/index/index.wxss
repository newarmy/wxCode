button {
  margin: 0;
  padding: 0;
  display: block;
  font-size: 32rpx;
}
button::after {
  border: 0;
}
button:not([size='mini']){
  width: auto;
  padding: 0;
  margin: 0;
}
.login-box{
  display:flex;
  justify-content: flex-start;
  width: 690rpx;
  height: 100rpx;
  margin: 0 auto 200rpx;
}
.broadcast-icon{
  width: 100rpx;
  height: 100rpx;
  background: url(//m1.auto.itc.cn/auto/content/20210916/9395af90cfa6ec2116da9b1d457b4e4b.png) no-repeat center center;
  background-size: 56rpx 54rpx;
}
.broadcast-box{
  position: relative;
  width: 490rpx;
  height: 100rpx;
  line-height: 100rpx;
  overflow: hidden;
}
.broadcast-box-text{
  position: absolute;
  top: 0;
  left: 0;
  line-height: 100rpx;
  font-size: 36rpx;
  color: red;
}
.copy-box{
  left: 490rpx;
}

.login-btn, .login-success-box{
  height: 100rpx !important;
  width: 100rpx !important;
  line-height: 100rpx;
  padding: 0 !important;
  margin: 0 !important;
  font-size: 32rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #4587FF;
  color:#fff;
}
.user-image{
  height: 100rpx !important;
  width: 100rpx !important;
}
.upload-btn-box{
  display:flex;
  justify-content: center;
  width: 690rpx;
  margin: 0 auto 200rpx;
}
.upload-btn-from-album, .upload-btn-from-camera{
  height: 266rpx !important;
  width: 316rpx !important;
  line-height: 200rpx;
  background: url(//m1.auto.itc.cn/auto/content/images2021/image.jpg) no-repeat;
  background-size: 316rpx 266rpx;
  text-indent: 10000px;
}
.upload-btn-from-camera{
  margin-left: 90rpx;
  background-image: url(//m1.auto.itc.cn/auto/content/images2021/camera.jpg);
}

.service-box{
  position: fixed;
  bottom: 30rpx;
  display:flex;
  justify-content: flex-end;
  width: 600rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  color:#fff;
}

.to-service-btn{
  font-size: 32rpx;
  font-weight: normal !important;
  color:#fff !important;
  height: 50rpx !important;
  width: 200rpx !important;
  line-height: 50rpx;
  padding: 0 !important;
  margin: 0 !important;
  background: #4587FF !important;
  text-align: center;
  border-radius: 25rpx !important;
}
.to-proxy-btn{
  margin-left: 100rpx;
  height: 50rpx !important;
  width: 200rpx !important;
  border-radius: 25rpx !important;
  text-align: center;
  background-color: #4587FF;
}