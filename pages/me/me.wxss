/* pages/me/me.wxss */
.user-area{
  position: relative;
  height: 300rpx;
  width: 750rpx;
  background-color:#5AF0DB;
}
.user-row{
  padding:  40rpx;
  height: 100rpx;
  display: flex;
  justify-content: flex-start;
}
.login-btn{
  height: 100rpx !important;
  width: 100rpx !important;
  line-height: 100rpx;
  padding: 0 !important;
  margin: 0 !important;
  font-size: 32rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #4587FF;
  color:#fff;
}
.user-img{
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  background-color: transparent;
  margin-right: 30rpx;
}
.user-name{
  color:#fff;
  line-height: 80rpx;
  font-size: 40rpx;
}

.active-code{
  position: absolute;
  right: 40rpx;
  bottom: 40rpx;
  color: #fff;
  font-size: 32rpx;
}
.content-area{
  box-sizing: border-box;
  padding: 20rpx 0;
  width: 750rpx;
}
.active-input{
  box-sizing: border-box;
  display: block;
  width: 690rpx;
  padding: 0 40rpx;
  line-height: 80rpx;
  height: 80rpx;
  font-size: 36rpx;
  color: #333;
  margin: 10rpx auto 30rpx;
  border: 1rpx solid #ccc;
  border-radius: 30rpx;
}
.use-active-code-btn, .contact-btn{
   padding: 0;
   width: 600rpx !important;
   height: 80rpx !important;
   line-height: 80rpx !important;
   background-color: #4587FF !important;
   color: #fff;
   text-align: center;
   border-radius: 40rpx;
   font-size: 36rpx;
   margin-bottom: 40rpx;
}