<!--pages/addAdvertising/addAdvertising.wxml-->

<view  class="layer-area">
     <view class="title-area">添加广告</view>
     <textarea value="{{advertising}}" class="textarea-style" bindblur="setAdvertising" placeholder="输入广告内容"></textarea>
   
      <view class="page-section">
        <view class="page-section-title">要显示的页面</view>
        <checkbox-group bindchange="checkboxChange">
          <label class="checkbox">
            <checkbox value="1"/>首页
          </label>
          <label class="checkbox">
            <checkbox value="2" />代理页面
          </label>
      </checkbox-group>
     </view>
     <button class="create-code-btn" bindtap="addAdFunc">提交</button>
   </view>